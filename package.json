    {
      "path": "dist/kyz-editor.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@size-limit/preset-small-lib": "^11.1.2",
